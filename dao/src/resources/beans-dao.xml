<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
					        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
					        http://www.springframework.org/schema/aop
                            http://www.springframework.org/schema/aop/spring-aop.xsd
					        http://www.springframework.org/schema/context
					        http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:annotation-config/>
	<context:component-scan base-package="by.htp.hermanovich.dao"/>
	<context:component-scan base-package="by.htp.hermanovich.pojo"/>

	<!-- Define bean bind with aspect annotation -->
	<bean id="loggerDaoAspect" class="by.htp.hermanovich.dao.aspect.LoggerDaoAspect"/>

	<!-- Define AOP support -->
	<aop:aspectj-autoproxy>
		<aop:include name="loggerDaoAspect"/>
	</aop:aspectj-autoproxy>

	<!--<bean id="sessionFactory" class="by.htp.hermanovich.util.HibernateUtil" factory-method="getSessionFactory"/>-->
</beans>